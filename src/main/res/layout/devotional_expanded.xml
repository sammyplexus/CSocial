<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width = "fill_parent"
        android:layout_height = "fill_parent"
        android:orientation="vertical"
        android:padding="5dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text = "Devotional for today"
            android:textSize = "16sp"
            android:padding="5dp"
            android:background="#ffffff"
            />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="#ffffff"
        android:padding="3dp"
        >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop = "10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text = "Title : "
            android:background="#ffffff"
            android:textSize = "15sp"
            android:id = "@+id/devotional_expanded_title"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="By : "
            android:paddingTop = "10dp"
            android:id = "@+id/devotional_expanded_writer"
           />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Read : "
            android:paddingTop = "10dp"
            android:id = "@+id/devotional_expanded_bible_passage"
            />
    </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#ffffff"
        android:padding="3dp"
        >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="10dp"
            android:text = " "
            android:id = "@+id/devotional_expanded_message"
            />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="2dp"
        android:hint="Enter your comments"
        android:textSize = "14sp"
        android:id = "@+id/devo_comments"
        />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Submit"
            android:id = "@+id/comments_enter"
            android:onClick = "comments_enter"
            android:background="#ff69b797"
            android:textColor="#fff"
        />



        <ListView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id = "@+id/comments_listview"/>



    </LinearLayout>
</ScrollView>
